@using Microsoft.AspNetCore.Mvc.TagHelpers
@model IEnumerable<DomcheBGLTD.Models.Entities.Listing>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
